@model Departments

<h1 class="alert alert-warning text-center">
    Create Department
</h1>

<div class="row">
    <form method="post" asp-controller="Departments" asp-action="AddNewDepartment" class="col-4"
           enctype="multipart/form-data">

        <div asp-validation-summary="All" class="text-danger"></div>

        <div>
            <label asp-for="Name"></label>
            <input type="text" asp-for="Name" class="form-control" /input>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="Description"></label>
            <input type="text" asp-for="Description" class="form-control" /input>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>


        <div>
            <button type="submit" class="btn btn-primary mt-1">Add</button>
            <a asp-controller="Departments" asp-action="GetIndexView">Back To List</a>
        </div>

    </form>
    <div class="col-4">
        <img src="" id="depImage" style="object-fit:contain" />
    </div>


</div>





